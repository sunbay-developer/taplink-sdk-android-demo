<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Transaction Basic Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Information"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Transaction Type and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_transaction_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sale"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@android:drawable/editbox_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- Total Transaction Amount (transAmount) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥100.00"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Order Base Amount (orderAmount) -->
            <LinearLayout
                android:id="@+id/layout_order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Order Amount:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥90.00"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Surcharge Amount (optional) -->
            <LinearLayout
                android:id="@+id/layout_surcharge_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Surcharge:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_surcharge_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥5.00"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Tip Amount (optional) -->
            <LinearLayout
                android:id="@+id/layout_tip_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tip:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_tip_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥10.00"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Cashback Amount (optional) -->
            <LinearLayout
                android:id="@+id/layout_cashback_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Cashback:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cashback_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥20.00"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Service Fee (optional) -->
            <LinearLayout
                android:id="@+id/layout_service_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Service Fee:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_service_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥15.00"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Order ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Order:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ORD20231201001"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Transaction ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Txn ID:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_transaction_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TXN20231201001"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Original Transaction ID (for REFUND, VOID, POST_AUTH, INCREMENTAL_AUTH) -->
            <LinearLayout
                android:id="@+id/layout_original_transaction_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/original_transaction_id_label"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_original_transaction_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TXN20231201000"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Transaction Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_transaction_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2023-12-01 14:30:25"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Auth Code (shown on success) -->
            <LinearLayout
                android:id="@+id/layout_auth_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Auth Code:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_auth_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123456"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Error Info (shown on failure) -->
            <LinearLayout
                android:id="@+id/layout_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Error Code:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_error_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="E001"
                        android:textColor="#F44336"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Error Msg:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_error_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="网络连接失败"
                        android:textColor="#F44336"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Batch Close Info (shown for BATCH_CLOSE transactions) -->
            <LinearLayout
                android:id="@+id/layout_batch_close_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Batch Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Batch No:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Total Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Total Count:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_total_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Total Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Total Amount:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_total_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¥33.23"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Total Tip -->
                <LinearLayout
                    android:id="@+id/layout_batch_total_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Total Tip:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_total_tip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¥6.10"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Total Surcharge -->
                <LinearLayout
                    android:id="@+id/layout_batch_total_surcharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Total Surcharge:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_total_surcharge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¥5.50"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Close Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Close Time:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_batch_close_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2025-12-11 06:53:23"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button Area -->
        <LinearLayout
            android:id="@+id/layout_operations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Refund Button -->
            <Button
                android:id="@+id/btn_refund"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="REFUND"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Void Button -->
            <Button
                android:id="@+id/btn_void"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="VOID"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Tip Adjust Button -->
            <Button
                android:id="@+id/btn_tip_adjust"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="TIP ADJUST"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Incremental Auth Button -->
            <Button
                android:id="@+id/btn_incremental_auth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="INCREMENTAL AUTH"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Post Auth Button -->
            <Button
                android:id="@+id/btn_post_auth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="POST AUTH"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            
            <!-- Query Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Query by Request ID Button -->
                <Button
                    android:id="@+id/btn_query_by_request_id"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="QUERY BY REQ ID"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:layout_marginEnd="6dp" />

                <!-- Query by Transaction ID Button -->
                <Button
                    android:id="@+id/btn_query_by_transaction_id"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="QUERY BY TRAN ID"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- No Operations Available -->
            <TextView
                android:id="@+id/tv_no_operations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No operations available for this transaction"
                android:textColor="#999999"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
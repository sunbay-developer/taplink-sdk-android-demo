<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection Status"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />
                
            <TextView
                android:id="@+id/tv_connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting..."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Settings Button -->
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Settings"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:minWidth="60dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Transaction History Button -->
        <Button
            android:id="@+id/btn_transaction_history"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="History"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@android:color/white"
            android:minWidth="60dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <!-- Amount Selection Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/select_product_title"-->
<!--            android:textSize="20sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#2C2C2C"-->
<!--            android:layout_marginBottom="20dp" />-->

        <!-- Preset Amount Button Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btn_product_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Iced Latte\n$1.01"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btn_product_sandwich"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Cheeseburger\n$5.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btn_product_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Croissant\n$7.49"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btn_product_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Trail Mix\n$10.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Custom Amount Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Amount"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_custom_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter amount"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Currently Selected Amount Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/purple_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: "
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_selected_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Transaction Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F8F9FA">

        <!-- AUTH and FORCED AUTH Buttons (Horizontal Layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- AUTH Button -->
            <Button
                android:id="@+id/btn_auth"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="AUTH"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:enabled="false"
                android:elevation="4dp"
                android:layout_marginEnd="6dp" />

            <!-- FORCED AUTH Button -->
            <Button
                android:id="@+id/btn_forced_auth"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="FORCED AUTH"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:enabled="false"
                android:elevation="4dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- SALE Button -->
        <Button
            android:id="@+id/btn_sale"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SALE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:enabled="false"
            android:elevation="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Payment Status Display -->
        <TextView
            android:id="@+id/tv_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="12dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

</ScrollView>